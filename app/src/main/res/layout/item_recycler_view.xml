<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:weightSum="1"
    android:padding="0dp"
    android:layout_margin="0dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPaddingRight="1dp"
        card_view:contentPaddingLeft="4dp"
        card_view:contentPaddingBottom="1dp"
        card_view:contentPaddingTop="1dp"
        >


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/txt_item_category"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textStyle="normal|bold"
                    android:textSize="14sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txt_item_date"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:maxLines="1" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/text_item_description"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:maxLines="1" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:srcCompat="@mipmap/minus_sign"
                android:id="@+id/item_image_plus"
                android:layout_weight="2.7" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txt_item_amount"
                android:layout_weight="2"
                android:gravity="center"
                android:textStyle="normal|bold"
                android:maxLines="1" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>